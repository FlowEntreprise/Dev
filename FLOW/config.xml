<?xml version='1.0' encoding='utf-8'?>
<widget id="com.flowapp.flow" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FLOW</name>
    <description>
        The Vocal Social Network.
    </description>
    <author email="flowapp.entreprise@gmail.com" href="http://cordova.io">
        FLOW Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <resource-file src="GoogleService-Info.plist" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-intent href="comflowapp:" />
        <preference name="deployment-target" value="11.0" />
        <preference name="AllowInlineMediaPlayback" value="true" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="KeyboardShrinksView" value="true" />
        <splash height="480" src="res/screen/ios/LaunchImage-320x480.png" width="320" />
        <splash height="960" src="res/screen/ios/LaunchImage-640x960.png" width="640" />
        <splash height="1024" src="res/screen/ios/LaunchImage-768x1024.png" width="768" />
        <splash height="2048" src="res/screen/ios/LaunchImage-1536x2048.png" width="1536" />
        <splash height="1136" src="res/screen/ios/LaunchImage-640x1136.png" width="640" />
        <splash height="1334" src="res/screen/ios/LaunchImage-750x1334.png" width="750" />
        <splash height="2208" src="res/screen/ios/LaunchImage-1242x2208.png" width="1242" />
        <preference name="StatusBarBackgroundColor" value="#f7f7f8" />
        <gap:config-file overwrite="true" parent="UIBackgroundModes" platform="ios">
            <array>
                <string>location</string>
            </array>
        </gap:config-file>
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>need camera access to take pictures</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
            <string>need photo library access to get pictures from there</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryAddUsageDescription">
            <string>need photo library access to save pictures there</string>
        </edit-config>
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="fullscreen" value="false" />
    <preference name="StatusBarBackgroundColor" value="#007EEF" />
    <preference name="Hostname" value="app" />
    <preference name="TwitterConsumerKey" value="JwyvPlw7GcOvE8pXmRvqTyZL3" />
    <preference name="TwitterConsumerSecret" value="6KXFOoLHqUIMwB74yNDcT0gK7WmvoK5wGLYwId4JsV185UIQQT" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova.plugins.diagnostic" spec="~4.0.11" />
    <plugin name="cordova-plugin-android-permissions" spec="~1.0.0" />
    <plugin name="cordova-plugin-k-imagecropper" spec="^1.2.0" />
    <plugin name="cordova-android-support-gradle-release" />
    <plugin name="cordova-support-google-services" />
    <plugin name="phonegap-plugin-multidex" spec="~1.0.0" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="~2.1.3" />
    <plugin name="cordova-plugin-fullscreen" spec="^1.2.0" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-file" spec="~6.0.2" />
    <plugin name="cordova-plugin-audioinput" spec="^1.0.2" />
    <plugin name="cordova-plugin-compat" spec="~1.2.0" />
    <plugin name="cordova-plugin-firebase-crashlytics" spec="~0.0.6" />
    <plugin name="cordova-support-android-plugin" spec="~1.0.1" />
    <plugin name="com.rjfun.cordova.httpd" spec="~0.9.2" />
    <plugin name="cordova-plugin-httpd" spec="~0.9.3" />
    <plugin name="cordova-plugin-media" spec="^5.0.3" />
    <plugin name="cordova-plugin-background-mode" spec="~0.7.3" />
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.3" />
    <plugin name="cordova-plugin-wkkeyboardfix" spec="~1.1.0" />
    <plugin name="cordova-plugin-dialogs" spec="~2.0.2" />
    <plugin name="cordova-clipboard" spec="~1.3.0" />
</widget>
