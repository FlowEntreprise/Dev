<?xml version='1.0' encoding='utf-8'?>
<widget id="com.flowapp.flow" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FLOW</name>
    <description>
        The Vocal Social Network.
    </description>
    <author email="flowapp.entreprise@gmail.com" href="http://cordova.io">
        FLOW Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="deployment-target" value="7.0" />
        <preference name="AllowInlineMediaPlayback" value="true" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="KeyboardShrinksView" value="true" />
        <splash src="res/screen/ios/LaunchImage-320x480.png" width="320" height="480"/>
        <splash src="res/screen/ios/LaunchImage-640x960.png" width="640" height="960"/>
        <splash src="res/screen/ios/LaunchImage-768x1024.png" width="768" height="1024"/>
        <splash src="res/screen/ios/LaunchImage-1536x2048.png" width="1536" height="2048"/>
        <splash src="res/screen/ios/LaunchImage-640x1136.png" width="640" height="1136"/>
        <splash src="res/screen/ios/LaunchImage-750x1334.png" width="750" height="1334"/>
        <splash src="res/screen/ios/LaunchImage-1242x2208.png" width="1242" height="2208"/>
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="fullscreen" value="false" />
    <preference name="StatusBarBackgroundColor" value="#007EEF" />
    <preference name="Hostname" value="app" />
    <preference name="TwitterConsumerKey" value="JwyvPlw7GcOvE8pXmRvqTyZL3" />
    <preference name="TwitterConsumerSecret" value="6KXFOoLHqUIMwB74yNDcT0gK7WmvoK5wGLYwId4JsV185UIQQT" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-android-permissions" spec="^1.0.0" />
    <plugin name="cordova-plugin-k-imagecropper" spec="^1.2.0">
        <variable name="ANDROID_SUPPORT_APPCOMPAT_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-camera" spec="~4.0.3" />
    <plugin name="cordova-android-support-gradle-release" spec="^2.1.0">
        <variable name="ANDROID_SUPPORT_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-support-google-services" spec="^1.3.1" />
    <plugin name="phonegap-plugin-multidex" spec="^1.0.0" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="2.1.3" />
    <plugin name="cordova-plugin-browsersync" spec="^1.1.0" />
    <plugin name="cordova-plugin-fullscreen" spec="^1.2.0" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-insomnia" spec="https://github.com/EddyVerbruggen/Insomnia-PhoneGap-Plugin.git" />
    <plugin name="cordova-plugin-file" spec="^6.0.2" />
    <plugin name="cordova-plugin-audioinput" spec="^1.0.2" />
    <plugin name="cordova-plugin-compat" spec="^1.2.0" />
</widget>
