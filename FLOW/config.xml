    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="twitter-connect-plugin" spec="^0.6.0">
        <variable name="FABRIC_KEY" value="1c7233ea28bcc14682e840d324ff7fbb32b9c038" />
