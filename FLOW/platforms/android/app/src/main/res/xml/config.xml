<?xml version='1.0' encoding='utf-8'?>
<widget id="com.flowapp.flow" version="2.1.7" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FLOW</name>
    <description>
        The Vocal Social Network.
    </description>
    <author email="flowapp.entreprise@gmail.com" href="http://cordova.io">
        FLOW Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application/activity[@android:name='MainActivity']">
        <activity android:name="MainActivity" android:windowSoftInputMode="adjustResize" />
        <application android:debuggable="false" />
    </edit-config>
    <allow-intent href="market:*" />
    <resource-file src="google-services.json" target="app/google-services.json" />
    <resource-file src="google-services.json" target="google-services.json" />
    <resource-file src="res/icon/android/drawable/flow_icone.png" target="app/src/main/res/drawable/flow_icone.png" />
    <resource-file src="res/icon/android/drawable/flow_icone_one_plus.png" target="app/src/main/res/drawable/flow_icone_one_plus.png" />
    <splash density="port-hdpi" src="res/screen/android/drawable-hdpi/splash.png" />
    <splash density="port-ldpi" src="res/screen/android/drawable-ldpi/splash.png" />
    <splash density="port-mdpi" src="res/screen/android/drawable-mdpi/splash.png" />
    <splash density="port-xhdpi" src="res/screen/android/drawable-xhdpi/splash.png" />
    <splash density="port-xxhdpi" src="res/screen/android/drawable-xxhdpi/splash.png" />
    <splash density="port-xxxhdpi" src="res/screen/android/drawable-xxxhdpi/splash.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="fullscreen" value="false" />
    <preference name="StatusBarBackgroundColor" value="#007EEF" />
    <preference name="Hostname" value="app" />
    <preference name="TwitterConsumerKey" value="JwyvPlw7GcOvE8pXmRvqTyZL3" />
    <preference name="TwitterConsumerSecret" value="6KXFOoLHqUIMwB74yNDcT0gK7WmvoK5wGLYwId4JsV185UIQQT" />
    <preference name="deployment-target" value="7.0" />
    <preference name="android-debuggable" value="false" />
    <preference name="android-targetSdkVersion" value="30" />
    <preference name="SplashStatusBarBackgroundColor" value="#007EFF" />
    <preference name="SplashNavigationBarBackgroundColor" value="#FF0054" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="AutoHideSplashScreen" value="false" />
</widget>
