<?xml version='1.0' encoding='utf-8'?>
<widget id="com.flowapp.flow" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Permissions">
        <param name="android-package" value="com.android.plugins.Permissions" />
    </feature>
    <feature name="AudioInputCapture">
        <param name="android-package" value="com.exelerus.cordova.audioinputcapture.AudioInputCapture" />
    </feature>
    <name>FLOW</name>
    <description>
        The Vocal Social Network.
    </description>
    <author email="flowapp.entreprise@gmail.com" href="http://cordova.io">
        FLOW Team
    </author>
    <icon src="www/src/icons/FLOW@3x.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application/activity[@android:name='MainActivity']">
        <activity android:name="MainActivity" android:windowSoftInputMode="adjustResize" />
    </edit-config>
    <allow-intent href="market:*" />
    <resource-file src="google-services.json" target="app/google-services.json" />
    <resource-file src="google-services.json" target="google-services.json" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="fullscreen" value="false" />
    <preference name="StatusBarBackgroundColor" value="#007EEF" />
    <preference name="Hostname" value="app" />
    <preference name="TwitterConsumerKey" value="JwyvPlw7GcOvE8pXmRvqTyZL3" />
    <preference name="TwitterConsumerSecret" value="6KXFOoLHqUIMwB74yNDcT0gK7WmvoK5wGLYwId4JsV185UIQQT" />
    <preference name="SplashStatusBarBackgroundColor" value="#007EFF" />
    <preference name="SplashNavigationBarBackgroundColor" value="#FF0054" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="FadeSplashScreenDuration" value="0" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
